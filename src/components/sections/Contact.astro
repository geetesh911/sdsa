---
import data from "../../assets/static/data";
---

<section class="pb_section" data-section="contact" id="section-contact">
  <div class="container">
    <div class="row justify-content-md-center text-center mb-5">
      <div class="col-lg-7">
        <h2 class="mt-0 heading-border-top font-weight-normal">Get In Touch</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 pr-md-5 pr-sm-0 mb-4">
        <form name="contact" method="post" data-netlify="true">
          <div class="row">
            <div class="col-md">
              <div class="form-group">
                <label for="name">Name</label>
                <input
                  type="text"
                  class="form-control p-3 rounded-0"
                  id="name"
                  name="name"
                />
              </div>
            </div>
            <div class="col-md">
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="text"
                  class="form-control p-3 rounded-0"
                  id="email"
                  name="email"
                />
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <textarea
              cols="30"
              rows="10"
              class="form-control p-3 rounded-0"
              id="message"
              name="message"></textarea>
          </div>
          <div class="form-group">
            <input
              type="submit"
              class="btn pb_outline-dark pb_font-13 pb_letter-spacing-2 p-3 rounded-0"
              value="Send Message"
            />
          </div>
        </form>
      </div>
      <div class="col-md-4">
        <ul class="pb_contact_details_v1">
          <li>
            <span class="text-uppercase">Email</span>
            <a href={`mailto:${data.contact.email}`}>
              {data.contact.email}
            </a>
          </li>
          <li>
            <span class="text-uppercase">Phone</span>
            <a href={`Tel:${data.contact.email}`}>
              {data.contact.phone}
            </a>
          </li>
          <li>
            <span class="text-uppercase">Address</span>
            {data.contact.address}
          </li>
        </ul>
        <div class="maps">
          <iframe
            width="240"
            height="250"
            title="Office Location"
            src="http://maps.google.com/maps?q=s.d.+sharma+associates&ie=UTF8&hq=s.d.+sharma+associates&hnear=&t=m&cid=15504972933312296804&source=embed&ll=26.866262,75.797065&spn=0.021705,0.042272&iwloc=A&output=embed"
          >
          </iframe>
          <a
            href="http://maps.google.com/maps?q=s.d.+sharma+associates&ie=UTF8&hq=s.d.+sharma+associates&hnear=&t=m&cid=15504972933312296804&source=embed&ll=26.866262,75.797065&spn=0.021705,0.042272&iwloc=A"
            class="d-block"
          >
            View Larger Map</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
